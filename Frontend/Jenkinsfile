pipeline {
    agent any
    stages{
        stage('Build Frontend'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Oopshie/ToolRent']])
                dir("Frontend"){
                    bat "npm install" // Use 'bat' for Windows agents or 'sh' for Unix/Linux agents
                    bat "npm run build" // Use 'bat' for Windows agents or 'sh' for Unix/Linux agents
                }
            }
        }
        stage("Build and Push Docker Image"){
            steps{
                dir("Frontend"){
                    script{
                        withDockerRegistry(credentialsId: 'docker-credentials'){
                            bat "docker build -t oopshie/toolrent-frontend ."
                            bat "docker push oopshie/toolrent-frontend"
                        }
                    }
                }
            }
        }
    }
}