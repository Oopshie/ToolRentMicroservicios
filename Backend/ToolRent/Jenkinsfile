pipeline {
    agent any
    tools{
        maven 'maven'
    }
    stages{

        stage('Build JAR File'){
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Oopshie/ToolRent']])
                dir("Backend/ToolRent"){
                bat "mvn clean install"
                }
            }
        }

        stage("Unit Tests") {
            steps {
                // Run Maven 'test' phase. It compiles the test sources and runs the unit tests
                dir("Backend/ToolRent"){
                bat "mvn test" // Use 'bat' for Windows agents or 'sh' for Unix/Linux agents
                }
            }
        }

        stage("Build and Push Docker Image"){
            steps{
                dir("Backend/ToolRent"){
                    script{
                        withDockerRegistry(credentialsId: 'docker-credentials'){
                            bat "docker build -t oopshie/toolrent-backend ."
                            bat "docker push oopshie/toolrent-backend"
                        }
                    }
                }
            }
        }


    }
}